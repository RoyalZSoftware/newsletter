#!/bin/bash
if [ "$DATA_DIR" = "" ]; then
    DATA_DIR=./test # can be overriden
fi

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
if [ "$SCRIPT_DIR" = "/usr/local/bin" ]; then
    LIB_DIR="/usr/local/share/newsletter"
else
    LIB_DIR="$SCRIPT_DIR/../lib"
fi

source $LIB_DIR/newsletter.sh

if [ "$1" = "" ];
then
usage
exit 1
fi

cmd="$1"
shift

case $cmd in

    subscribe)
        subscribe "$1" "$2"
        ;;

    confirm)
        confirm "$1" "$2"
        ;;

    unsubscribe)
        unsubscribe "$1"
        ;;

    send)
        send "$1" "$2"
        ;;

    send_due)
        send_due
        ;;

    add_journey)
        add_journey "$1" "$2"
        ;;

    remove_journey)
        remove_journey "$1" "$2"
        ;;

    clear_journeys)
        clear_journeys "$1"
        ;;

    list)
        list
        ;;

    *)
        usage
        ;;
esac

# use params from cli to invoke functions from lib/newsletter.sh
